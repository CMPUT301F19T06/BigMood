<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ActivityMoodView">

    <LinearLayout
        android:id="@+id/background_pic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:background="@color/colorBlue"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentMood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="MOOD:"
                android:textSize="20sp"></TextView>


            <ImageView
                android:id="@+id/currentMoodImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:maxWidth="20sp"
                android:maxHeight="20sp"
                android:scaleType="centerInside"
                android:src="@mipmap/emoji_angry" />
        </LinearLayout>
        <EditText
            android:id="@+id/moodTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="70dp">

        </EditText>
        <TextView
            android:id="@+id/currentDate"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="200dp"
            android:text="Date:"
            android:textSize="15sp">



        </TextView>


        <TextView
            android:id="@+id/description"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:text="Description"
            android:textSize="35sp">

        </TextView>

        <EditText
            android:id="@+id/moodDescription"
            android:layout_width="match_parent"
            android:layout_height="60dp">

        </EditText>

        <Button
            android:id="@+id/save_button"
            android:layout_marginTop="@android:dimen/app_icon_size"
            android:layout_gravity="center"
            android:layout_width="123dp"
            android:text="SAVE"
            android:layout_height="50dp">

        </Button>

    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Profile_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:src ="@drawable/camera_info"
        app:civ_border_color="#00000000"
        app:civ_circle_background_color="@color/colorWhite"
        >

    </de.hdodenhof.circleimageview.CircleImageView>

</RelativeLayout>