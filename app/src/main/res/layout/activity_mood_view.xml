<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ActivityMoodView">

    <LinearLayout
        android:id="@+id/background_pic"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/Surprise"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/currentMood"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="MoodTitle"
                        android:autofillHints="New Mood"
                        android:gravity="center_vertical"
                        android:textSize="20sp"></TextView>
                </LinearLayout>


            </LinearLayout>


            <ImageView
                android:id="@+id/currentMoodImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:adjustViewBounds="true"
                android:foregroundGravity="center"
                android:maxWidth="20sp"
                android:maxHeight="20sp"
                android:scaleType="fitCenter"

                app:srcCompat="@mipmap/emoji_happy"></ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/currentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:text="SELECT DATE"
            android:textColor="@color/colorBlue"
            android:textSize="18sp">

        </TextView>


        <TextView
            android:id="@+id/moodDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="120dp">

        </TextView>

        <Button
            android:id="@+id/edit_button"
            android:layout_width="123dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="EDIT?">

        </Button>







    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Profile_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/camera_info"
        app:civ_border_color="#00000000"
        app:civ_circle_background_color="@color/colorWhite">

    </de.hdodenhof.circleimageview.CircleImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/moodUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="username"
            android:textAllCaps="true"
            android:textSize="20dp"></TextView>
        <TextView
            android:id="@+id/moodSituationSpinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:autofillHints="New Mood"
            android:text="MoodSituation"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cardview_compat_inset_shadow"
            android:layout_marginTop="10dp"
            android:text="Description"
            android:textSize="35sp">

        </TextView>


    </LinearLayout>



</RelativeLayout>